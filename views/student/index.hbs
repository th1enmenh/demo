<table class="table table-bordered bg-light mt-3 mb-3 text-center">
    <tr>
        <th class="text-primary" colspan="5">STUDENT L√çT</th>
        <th>
            <a class="btn btn-primary" href="student/add">Add</a>
        </th>
    </tr>
    <tr>
